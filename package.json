{
  "name": "school-bell-system",
  "version": "1.0.1",
  "description": "校园闹铃系统",
  "main": "main.js",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "electron-builder",
      "electron-squirrel-startup"
    ]
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dist:win": "npm run build && electron-builder --win nsis --config.directories.output=release/v${version}/setup",
    "dist:portable": "npm run build && electron-builder --win portable --config.directories.output=release/v${version}/portable --config.portable.artifactName='${productName}-Portable-v${version}.${ext}'"
  },
  "author": "LiuJunbao<juna3066@gmail.com>",
  "license": "Apache-2.0",
  "build": {
    "appId": "xyz.8008088.alarm",
    "productName": "校园闹铃系统",
    "copyright": "Copyright © 2025 ${author}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "public/icon.ico"
    ],
    "extraResources": [
      {
        "from": "default",
        "to": "default"
      }
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "debug": "^4.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "ms": "^2.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  }
}